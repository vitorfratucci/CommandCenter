@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>CommandCenter</h1>
    <p>Painel de Gestão de Crises e Informativos Corporativos</p>

    <hr />

    <h3>Status do Sistema</h3>
    <p>🕑 Horário atual do servidor: <span id="serverTime">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</span></p>


    <!-- No futuro, se tiver SSO -->
    @* <p>👤 Usuário logado: @User.Identity.Name</p> *@

</div>

<script>
    function updateClock() {
        const now = new Date();
        const formatted = now.toLocaleString('pt-BR', {
            day: '2-digit',
            month: '2-digit',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        });
        document.getElementById('serverTime').innerText = formatted;
    }

    // Atualiza já ao abrir
    updateClock();

    // Atualiza a cada 1 segundo
    setInterval(updateClock, 1000);
</script>
